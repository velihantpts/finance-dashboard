generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String            @id @default(cuid())
  name             String?
  email            String            @unique
  password         String
  role             String            @default("analyst")
  phone            String?
  image            String?
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt
  sessions         Session[]
  notifications    Notification[]
  auditLogs        AuditLog[]
  scheduledReports ScheduledReport[]
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Transaction {
  id        String   @id @default(cuid())
  txnId     String   @unique
  client    String
  type      String
  asset     String
  amount    Float
  status    String
  risk      String
  date      DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model RiskScore {
  id       String @id @default(cuid())
  category String @unique
  score    Int
  previous Int
}

model PortfolioAllocation {
  id    String @id @default(cuid())
  name  String @unique
  value Float
  color String
}

model Revenue {
  id       String @id @default(cuid())
  month    String @unique
  revenue  Float
  expenses Float
  profit   Float
}

model KpiMetric {
  id     String @id @default(cuid())
  key    String @unique
  value  String
  change String
  trend  String
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  type      String   // alert, success, info, warning
  title     String
  message   String
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model AuditLog {
  id        String   @id @default(cuid())
  userId    String
  action    String
  entity    String
  entityId  String?
  details   String?
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model ScheduledReport {
  id         String    @id @default(cuid())
  userId     String
  name       String
  frequency  String
  email      String
  reportType String
  active     Boolean   @default(true)
  lastRun    DateTime?
  nextRun    DateTime?
  createdAt  DateTime  @default(now())
  user       User      @relation(fields: [userId], references: [id], onDelete: Cascade)
}
